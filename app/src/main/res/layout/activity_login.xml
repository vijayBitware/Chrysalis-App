<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="10"></LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.9"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9.4"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:src="@drawable/chry_logo" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2" />

            <com.chrysalis.widgets.TextViewBold
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/loginstring"
                android:textColor="@color/activebullets" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

            <com.chrysalis.widgets.TextViewBold
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:gravity="left|center|bottom"
                android:text="Email"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <EditText
                    android:id="@+id/etLoginEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/edt_cellborder"
                    android:gravity="left|center"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="7dp"
                    android:singleLine="true" />
            </LinearLayout>

            <com.chrysalis.widgets.TextViewBold
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:gravity="left|center|bottom"
                android:text="Password"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edt_cellborder"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                    android:id="@+id/etLoginPass"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9.5"
                    android:backgroundTint="@color/white"
                    android:gravity="left|center"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:paddingLeft="7dp"
                    android:singleLine="true"
                    android:text="" />
            </LinearLayout>
            <!-- <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="0.9"
                 android:background="@drawable/edt_cellborder"
                 android:orientation="horizontal"
                 android:weightSum="10">

                 <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                     android:id="@+id/etLoginPass"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:backgroundTint="@color/white"
                     android:inputType="textPassword"
                     android:paddingLeft="7dp"
                     android:text="1234"
                     android:singleLine="true" />
             </LinearLayout>-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2" />

            <com.chrysalis.widgets.TextViewRegular
                android:id="@+id/tvForgotPass"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="@string/loginhelp"
                android:textColor="@color/lightgray" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/btn_bg"
                android:text="Log In"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <com.chrysalis.widgets.TextViewBold
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="OR"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="vertical"
                android:weightSum="10">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp">

                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/login_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_facebook_bg"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:scaleType="fitCenter" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:padding="12dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/fbimgnew" />

                        <Button
                            android:id="@+id/fbLogin"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:background="@drawable/btn_facebook_bg"
                            android:gravity="left|center"
                            android:onClick="FacebookLoginClick"
                            android:text="Log In With Facebook"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="15sp" />
                    </LinearLayout>
                    <!--     <Button
                             android:id="@+id/fbRegister"
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                             android:onClick="FacebookSignupClick"
                             android:text="Register With Facebook"
                             android:textAllCaps="false"
                             android:textColor="@color/white"
                             android:textSize="16sp" />-->
                </FrameLayout>
                <!--     <FrameLayout
                         android:layout_width="match_parent"
                         android:layout_height="55dp">

                         <com.facebook.login.widget.LoginButton
                             android:id="@+id/login_button"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:visibility="gone" />

                         <Button
                             android:id="@+id/fbLogin"
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                             android:background="@drawable/btn_facebook_bg"
                             android:onClick="FacebookLoginClick"
                             android:text="Login With Facebook"
                             android:textAllCaps="false"
                             android:textColor="@color/white"
                            />
                     </FrameLayout>-->
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />
    </LinearLayout>

    <com.chrysalis.widgets.TextViewBold
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="@string/logindonthaveaccount"
        android:textColor="@color/black" />
</LinearLayout>